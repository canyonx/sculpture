{# bulma Sliding pagination control implementation #}

{% set position = position|default('centered') %}
{% set rounded = rounded|default(false) %}
{% set size = size|default(null) %}

{% set classes = ['pagination'] %}

{% if position != 'left' %}
	{% set classes = classes|merge(['is-' ~ position]) %}
{% endif %}
{% if rounded %}
	{% set classes = classes|merge(['is-rounded']) %}
{% endif %}
{% if size != null %}
	{% set classes = classes|merge(['is-' ~ size]) %}
{% endif %}

{% if pageCount > 1 %}
	<nav class="{{ classes|join(' ') }}" role="navigation" aria-label="pagination">
		{% if previous is defined %}
			<a rel="prev" class="pagination-previous button is-white is-outlined" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">Précédent</a>
		{% else %}
			<a class="pagination-previous is-hidden" disabled>Précédent</a>
		{% endif %}

		{% if next is defined %}
			<a rel="next" class="pagination-next button is-white is-outlined" href="{{ path(route, query|merge({(pageParameterName): next})) }}">Suivant</a>
		{% else %}
			<a class="pagination-next is-hidden" disabled>Suivant</a>
		{% endif %}
	</nav>
{% endif %}
